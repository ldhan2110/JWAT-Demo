{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transformIgnorePatterns": ["node_modules/(?!variables/.*)"],
  "testRegex": ".*\\.spec\\.ts$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx"],
  "moduleNameMapper": {
    "@src/(.*)": ["<rootDir>/src/$1"]
  },
  "collectCoverage": false,
  "collectCoverageFrom": ["./src/*.(t|j)s", "!**/node_modules/**"],
  "coverageDirectory": "./coverage"
}
